{
    "compilerOptions": {
      "target": "es2022",                                
      "module": "es2022",                                
      "rootDir": "src/",
      "outDir": "./out/",                                   
      "esModuleInterop": true,                            
      "forceConsistentCasingInFileNames": true,              
      "strict": true,                                      
      "skipLibCheck": true                                 
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"]
}