[workspace]
resolver = "2"
members = ["components-rust/*", "common-rust/*"]

[profile.release]
opt-level = "s"
lto = true

[workspace.dependencies]
async-trait = {version = "0.1.89"}
golem-rust = { GOLEM_RUST_VERSION_OR_PATH, features = ["export_load_snapshot", "export_save_snapshot", "export_golem_agentic"] }
golem-wasi-http = { version = "0.1.0", features = ["json"] }
serde = { version = "1", features = ["derive"] }
serde_json = "1"
ctor = "0.4.3"
