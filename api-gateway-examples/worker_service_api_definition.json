{
  "id": "shopping-cart-v1",
  "version": "0.0.3",
  "routes": [
    {
      "method": "Get",
      "path": "/{user-id}/get-cart-contents",
      "binding": {
        "type": "wit-worker",
        "componentId": "2696abdc-df3a-4771-8215-d6af7aa4c408",
        "workerName": "worker-${request.path.user-id}",
        "functionName": "golem:it/api/get-cart-contents",
        "functionParams": [],
        "response" : "${let result = golem:it/api/get-cart-contents(); { status: 200, body: { name: result[0].name, price: result[0].price, quantity: result[0].quantity }}}"
        }
      }
  ]
}
